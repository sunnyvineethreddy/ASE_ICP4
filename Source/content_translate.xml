<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".translate_activity">

    <Button
        android:id="@+id/txt_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="35dp"
        android:text="Logout"
        android:onClick="logout"/>

    <EditText
        android:id="@+id/txt_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_logout"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/txt_logout"
        android:layout_toStartOf="@+id/txt_logout"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter text" />

    <TextView
        android:id="@+id/txt_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_destination"
        android:layout_alignStart="@+id/txt_destination"
        android:layout_below="@+id/txt_destination"
        android:layout_marginTop="19dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/txt_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_sourcelan"
        android:layout_alignStart="@+id/txt_sourcelan"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter destination language"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_display"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/txt_display"
        android:layout_toRightOf="@+id/txt_display"
        android:onClick="translateText"
        android:text="Translate" />

    <EditText
        android:id="@+id/txt_sourcelan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_source"
        android:layout_alignStart="@+id/txt_source"
        android:layout_below="@+id/txt_source"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Source languauge"
        android:inputType="textPersonName" />


</RelativeLayout>